<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinder"
    android:orientation="vertical"
    tools:context=".DeviceScanActivity"
    >
  <!--顶部-->
  <LinearLayout
      android:layout_weight="1"
      android:orientation="horizontal"
      android:background="@color/mirage"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      >
    <TextView
        android:layout_marginLeft="@dimen/x30"
        android:layout_gravity="center_vertical"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/x35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
      <TextView
          android:layout_weight="1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />
      <TextView
          android:textSize="@dimen/x30"
          android:layout_gravity="center_vertical"
          android:textColor="@color/white"
          android:text="00001"
          android:maxEms="10"
          android:singleLine="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />
      <ImageView
          android:layout_gravity="center_vertical"
          android:src="@drawable/ico_connected"
          android:layout_width="@dimen/x25"
          android:layout_height="@dimen/x25"
          />
    </LinearLayout>

  </LinearLayout>



  <!--中部-->
  <LinearLayout
      android:layout_weight="4"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginTop="@dimen/y25"
      android:orientation="horizontal"
      >
    <!--侧滑按钮-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="@dimen/x50"
        android:layout_height="match_parent"
        android:gravity="center"
        >
      <ImageButton
          android:layout_gravity="center"
          android:background="@drawable/ico_right_slide"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="3"
        android:background="@drawable/fill_bitmap_black"
        android:gravity="center"
        android:orientation="vertical"
        >
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:orientation="horizontal"
          >
        <LinearLayout
            android:layout_marginLeft="@dimen/x150"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
          <TextView
              android:layout_marginRight="@dimen/x10"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/calibration_value"
              android:textColor="@color/white"
              android:textSize="@dimen/x30"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="0kg"
              android:textColor="@color/white"
              android:textSize="@dimen/x30"
              />
        </LinearLayout>


          <TextView
              android:layout_centerHorizontal="true"
              android:layout_gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/net"
              android:textColor="@color/bleu_de_france"
              android:textSize="@dimen/x45"
              />

      </RelativeLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          >
        <TextView

            android:id="@+id/tv_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="0.0001"
            android:textColor="@color/bleu_de_france"
            android:textSize="@dimen/x150"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="32sp"
            />
      </LinearLayout>

      <!--重量数字下面的图标-->
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="horizontal"
          >
        <ImageView
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x32"
            android:background="@drawable/ico_a_selecotor"
            />
        <ImageView
            android:layout_marginLeft="@dimen/x5"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x32"
            android:background="@drawable/ico_b_selecotor"
            />
        <ImageView
            android:layout_marginLeft="@dimen/x5"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x32"
            android:background="@drawable/ico_c_selecotor"
            />
        <ImageView
            android:layout_marginLeft="@dimen/x5"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x32"
            android:background="@drawable/ico_d_selecotor"
            />
        <ImageView
            android:layout_marginLeft="@dimen/x5"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x32"
            android:background="@drawable/ico_e_selecotor"
            />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/tare"
              android:textColor="@color/gray"
              />
          <TextView
              android:layout_marginLeft="@dimen/x2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="0.0000 kg"
              android:textColor="@color/bright_turquoise"
              />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/acc"
              android:textColor="@color/gray"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="0.9998 (1)kg"
              android:textColor="@color/yellow"
              android:textSize="@dimen/x45"
              />
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="@dimen/x50"
        android:layout_height="match_parent"
        android:gravity="center"
        >
    </LinearLayout>

  </LinearLayout>
  <!--底部-->
  <LinearLayout
      android:layout_weight="1"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      >
    <LinearLayout
        android:paddingLeft="@dimen/x50"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        >
      <ImageView
          android:id="@+id/btn_print"
          android:layout_gravity="center"
          android:src="@drawable/print"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />
      <ImageView
          android:id="@+id/btn_save"
          android:layout_gravity="center"
          android:layout_marginLeft="@dimen/x10"
          android:src="@drawable/printset"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />
    </LinearLayout>
    <!--菜单按钮-->
    <LinearLayout
        android:gravity="center"
        android:layout_width="@dimen/x720"
        android:layout_height="match_parent"
        >
      <Button
          android:elevation="1dp"
          android:id="@+id/btn_switch"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/btn_gray_selector"
          android:text="@string/switch_ng"
          android:singleLine="true"
          android:textColor="@color/white"
          android:textSize="@dimen/x30"
          />

      <Button
          android:id="@+id/btn_tare"
          android:elevation="1dp"
          android:layout_marginLeft="@dimen/x5"
          android:layout_width="@dimen/x150"
          android:layout_height="wrap_content"
          android:singleLine="true"
          android:text="@string/tare"
          android:textColor="@color/white"
          android:background="@drawable/btn_gray_selector"
          android:textSize="@dimen/x30"
          />
      <Button
          android:id="@+id/btn_zero"
          android:layout_marginLeft="@dimen/x5"
          android:elevation="1dp"
          android:layout_width="@dimen/x150"
          android:layout_height="wrap_content"
          android:singleLine="true"
          android:text="@string/zero"
          android:background="@drawable/btn_gray_selector"
          android:textColor="@color/white"
          android:textSize="@dimen/x30"
          />
      <Button
          android:id="@+id/btn_unit"
          android:layout_marginLeft="@dimen/x3"
          android:elevation="1dp"
          android:layout_width="@dimen/x150"
          android:layout_height="wrap_content"
          android:singleLine="true"
          android:text="@string/unit"
          android:gravity="center"
          android:background="@drawable/btn_gray_selector"
          android:textColor="@color/white"
          android:textSize="@dimen/x30"
          />



    </LinearLayout>
  </LinearLayout>



</LinearLayout>