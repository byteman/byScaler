<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinder"
    android:orientation="vertical"
    tools:context=".DeviceScanActivity"
    >
  <!--顶部-->
  <LinearLayout
      android:layout_weight="1"
      android:orientation="horizontal"
      android:background="@color/mirage"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      >
    <TextView
        android:layout_marginLeft="@dimen/x30"
        android:layout_gravity="center_vertical"
        android:text="蓝牙称"
        android:textColor="@color/white"
        android:textSize="@dimen/x35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
      <TextView
          android:layout_weight="1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />
      <TextView
          android:textSize="@dimen/x30"
          android:layout_gravity="center_vertical"
          android:textColor="@color/white"
          android:text="omnio...00001"
          android:maxEms="10"
          android:singleLine="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />
      <ImageView
          android:layout_gravity="center_vertical"
          android:src="@drawable/ico_connected"
          android:layout_width="@dimen/x25"
          android:layout_height="@dimen/x25"
          />
    </LinearLayout>

  </LinearLayout>
  <LinearLayout
      android:visibility="gone"
      android:id="@+id/power"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:gravity="center"
      >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
      <com.blescaler.ui.ble.BatteryState
          android:id="@+id/bs_power"
          android:layout_width="@dimen/x80"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/x10"
          />

      <com.blescaler.ui.ble.AutoBgButton
          android:id="@+id/btn_switch"
          android:layout_marginLeft="@dimen/x20"
          android:background="@drawable/bt_oval_shape"
          android:text="N/G"
          android:textColor="@color/white"
          android:textStyle="bold"
          style="@style/bybutton"
          />

      <com.blescaler.ui.ble.AutoBgButton
          android:id="@+id/btn_preset"
          android:layout_marginLeft="@dimen/x20"
          android:background="@drawable/bt_oval_shape"
          android:text="PT"
          style="@style/bybutton"
          />

      <com.blescaler.ui.ble.AutoBgButton
          android:id="@+id/btn_tare"
          android:layout_marginLeft="@dimen/x20"
          android:background="@drawable/bt_oval_shape"
          android:text="Tare"
          android:textStyle="bold"
          style="@style/bybutton"
          />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/power2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/x20"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/y30"
        >

      <com.blescaler.ui.ble.AutoBgButton
          android:id="@+id/btn_zero1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/bt_oval_shape"
          android:text="0"
          android:textColor="@color/white"
          android:textSize="14sp"
          android:textStyle="bold"
          />

      <com.blescaler.ui.ble.AutoBgButton
          android:id="@+id/btn_still"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/x20"
          android:background="@drawable/bt_oval_shape"
          android:text="~"
          android:textColor="@color/white"
          android:textSize="14sp"
          android:textStyle="bold"
          />

      <com.blescaler.ui.ble.AutoBgButton
          android:id="@+id/btn_ng"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/x20"
          android:background="@drawable/bt_oval_shape"
          android:text="Gross"
          android:textColor="@color/white"
          android:textSize="14sp"
          android:textStyle="bold"
          />

    </LinearLayout>

  </LinearLayout>
  <!--中部-->
  <LinearLayout
      android:layout_weight="4"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginTop="@dimen/y25"
      android:orientation="horizontal"
      >
    <!--侧滑按钮-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="@dimen/x50"
        android:layout_height="match_parent"
        android:gravity="center"
        >
      <ImageButton
          android:layout_gravity="center"
          android:background="@drawable/ico_left_slide"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="3"
        android:background="@drawable/fill_bitmap_black"
        android:gravity="center"
        android:orientation="vertical"
        >
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:orientation="horizontal"
          >
        <LinearLayout
            android:layout_marginLeft="@dimen/x150"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
          <TextView
              android:layout_marginRight="@dimen/x10"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="校验标准值:"
              android:textColor="@color/white"
              android:textSize="@dimen/x30"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="0kg"
              android:textColor="@color/white"
              android:textSize="@dimen/x30"
              />
        </LinearLayout>


          <TextView
              android:layout_centerHorizontal="true"
              android:layout_gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="净重(kg)"
              android:textColor="@color/bleu_de_france"
              android:textSize="@dimen/x45"
              />

      </RelativeLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          >
        <TextView

            android:id="@+id/tv_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="0.0001"
            android:textColor="@color/bleu_de_france"
            android:textSize="@dimen/x150"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="32sp"
            />
      </LinearLayout>

      <!--重量数字下面的图标-->
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="horizontal"
          >
        <ImageView
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x32"
            android:background="@drawable/ico_a_selecotor"
            />
        <ImageView
            android:layout_marginLeft="@dimen/x5"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x32"
            android:background="@drawable/ico_b_selecotor"
            />
        <ImageView
            android:layout_marginLeft="@dimen/x5"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x32"
            android:background="@drawable/ico_c_selecotor"
            />
        <ImageView
            android:layout_marginLeft="@dimen/x5"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x32"
            android:background="@drawable/ico_d_selecotor"
            />
        <ImageView
            android:layout_marginLeft="@dimen/x5"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x32"
            android:background="@drawable/ico_e_selecotor"
            />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="扣重"
              android:textColor="@color/gray"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="0.0000 kg"
              android:textColor="@color/bright_turquoise"
              />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="累计"
              android:textColor="@color/gray"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="0.9998 (1)kg"
              android:textColor="@color/yellow"
              android:textSize="@dimen/x45"
              />
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="@dimen/x50"
        android:layout_height="match_parent"
        android:gravity="center"
        >
    </LinearLayout>

  </LinearLayout>
  <!--底部-->
  <LinearLayout
      android:layout_weight="1"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      >
    <LinearLayout
        android:paddingLeft="@dimen/x50"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        >
      <ImageView
          android:layout_gravity="center"
          android:src="@drawable/print"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />
      <ImageView
          android:layout_gravity="center"
          android:layout_marginLeft="@dimen/x10"
          android:src="@drawable/printset"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />
    </LinearLayout>
    <!--菜单按钮-->
    <LinearLayout
        android:gravity="center"
        android:layout_width="@dimen/x700"
        android:layout_height="match_parent"
        >
      <Button
          android:elevation="1dp"
          android:id="@+id/btn_main_jingzhong"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/btn_gray_selector"
          android:text="净重/毛重"
          android:singleLine="true"
          android:textColor="@color/white"
          android:textSize="@dimen/x30"
          />

      <Button
          android:elevation="1dp"
          android:layout_marginLeft="@dimen/x5"
          android:layout_width="@dimen/x90"
          android:layout_height="wrap_content"
          android:singleLine="true"
          android:text="扣重"
          android:textColor="@color/white"
          android:background="@drawable/btn_gray_selector"
          android:textSize="@dimen/x30"
          />
      <Button
          android:layout_marginLeft="@dimen/x5"
          android:elevation="1dp"
          android:layout_width="@dimen/x90"
          android:layout_height="wrap_content"
          android:singleLine="true"
          android:text="归零"
          android:background="@drawable/btn_gray_selector"
          android:textColor="@color/white"
          android:textSize="@dimen/x30"
          />
      <Button
          android:layout_marginLeft="@dimen/x3"
          android:elevation="1dp"
          android:layout_width="@dimen/x90"
          android:layout_height="wrap_content"
          android:singleLine="true"
          android:text="单位"
          android:gravity="center"
          android:background="@drawable/btn_gray_selector"
          android:textColor="@color/white"
          android:textSize="@dimen/x30"
          />
      <Button
          android:layout_marginLeft="@dimen/x3"
          android:elevation="1dp"
          android:layout_width="@dimen/x90"
          android:layout_height="wrap_content"
          android:singleLine="true"
          android:background="@drawable/btn_gray_selector"
          android:text="扣重"
          android:textColor="@color/white"
          android:textSize="@dimen/x30"
          />

      <Button
          android:layout_marginLeft="@dimen/x3"
          android:elevation="1dp"
          android:id="@+id/button7"
          android:layout_width="@dimen/x90"
          android:layout_height="wrap_content"
          android:background="@drawable/btn_gray_selector"
          android:text="累计"
          android:textColor="@color/white"
          android:textSize="@dimen/x30"
          />
    </LinearLayout>
  </LinearLayout>
  <LinearLayout
      android:visibility="gone"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      >
    <com.blescaler.ui.ble.AutoBgButton
        android:id="@+id/btn_zero"
        android:layout_alignRight="@+id/btn_save"
        android:layout_below="@+id/mainlayout"
        android:background="@drawable/bt_oval_shape"
        android:text="zero"
        android:textStyle="bold"
        style="@style/bybutton"
        />


    <com.blescaler.ui.ble.AutoBgButton
        android:id="@+id/btn_print"
        android:layout_alignBaseline="@+id/btn_sleep"
        android:layout_alignBottom="@+id/btn_sleep"
        android:layout_toRightOf="@+id/btn_sleep"
        android:background="@drawable/bt_oval_shape"
        android:text="poweroff"
        style="@style/bybutton"
        />

    <com.blescaler.ui.ble.AutoBgButton
        android:id="@+id/btn_sleep"
        android:layout_alignBaseline="@+id/btn_zero"
        android:layout_alignBottom="@+id/btn_zero"
        android:layout_marginLeft="42dp"
        android:layout_toRightOf="@+id/btn_zero"
        android:background="@drawable/bt_oval_shape"
        android:text="sleep"
        style="@style/bybutton"
        />

    <com.blescaler.ui.ble.AutoBgButton
        android:id="@+id/btn_wake"
        android:layout_alignBaseline="@+id/btn_print"
        android:layout_alignBottom="@+id/btn_print"
        android:layout_toRightOf="@+id/btn_print"
        android:background="@drawable/bt_oval_shape"
        android:text="wake"
        style="@style/bybutton"
        />

    <com.blescaler.ui.ble.AutoBgButton
        android:id="@+id/btn_unit"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/mainlayout"
        android:background="@drawable/bt_oval_shape"
        android:text="unit"
        style="@style/bybutton"
        />

    <com.blescaler.ui.ble.AutoBgButton
        android:id="@+id/btn_save"
        android:layout_alignBottom="@+id/mainlayout"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="31dp"
        android:background="@drawable/bt_oval_shape"
        android:text="save"
        style="@style/bybutton"
        />
  </LinearLayout>


</LinearLayout>