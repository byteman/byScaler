<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinder"
    android:orientation="vertical"
    tools:context=".DeviceScanActivity"
    >
  <!--顶部-->
  <LinearLayout
      android:layout_weight="1"
      android:orientation="horizontal"
      android:background="@color/mirage"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      >
    <TextView
        android:layout_marginLeft="@dimen/x30"
        android:layout_gravity="center_vertical"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/x35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
      <TextView
          android:layout_weight="1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />
      <Button
          android:id="@+id/btn_history"
          android:layout_gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/btn_gray_selector"
          android:elevation="1dp"
          android:singleLine="true"
          android:text="@string/history"
          android:textColor="@color/white"
          android:textSize="@dimen/x30"
          android:textStyle="bold"
          android:layout_marginRight="@dimen/x100"
          />
      <TextView
          android:textSize="@dimen/x30"
          android:layout_gravity="center_vertical"
          android:textColor="@color/white"
          android:text=""
          android:maxEms="10"
          android:singleLine="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />
      <ImageView
          android:id="@+id/img_conn_state"
          android:layout_marginLeft="@dimen/x20"
          android:layout_marginRight="@dimen/x50"
          android:layout_gravity="center_vertical"
          android:src="@drawable/conn_state_list"
          android:layout_width="@dimen/x64"
          android:layout_height="@dimen/x64"
          />
    </LinearLayout>

  </LinearLayout>



  <!--中部-->
  <LinearLayout
      android:layout_weight="4"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginTop="@dimen/y25"
      android:orientation="horizontal"
      >
    <!--侧滑按钮-->
    <LinearLayout
        android:layout_width="@dimen/x50"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

      <ImageButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:background="@drawable/ico_right_slide" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="3"
        android:background="@drawable/fill_bitmap_black"
        android:gravity="center"
        android:orientation="vertical"
        >
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:orientation="horizontal"
          >
        <LinearLayout
            android:layout_marginLeft="@dimen/x150"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            >
          <TextView
              android:layout_marginRight="@dimen/x10"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""
              android:textColor="@color/white"
              android:textSize="@dimen/x30"
              />
        </LinearLayout>


          <TextView
              android:id="@+id/tv_oneweight_net_title"
              android:layout_centerHorizontal="true"
              android:layout_gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/net"
              android:textColor="@color/white"
              android:textSize="@dimen/x45"
              />
        <TextView
            android:id="@+id/id_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/linearLayout"
            android:layout_alignTop="@+id/linearLayout"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/x30"
            />
        <!--<TextView-->
            <!--android:layout_marginLeft="@dimen/x20"-->
            <!--android:layout_toRightOf="@+id/tv_oneweight_net_title"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="11"-->
            <!--android:textColor="@color/bleu_de_france"-->
            <!--android:textSize="@dimen/x45"-->
            <!--/>-->

      </RelativeLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          >
        <TextView

            android:id="@+id/tv_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="0.0001"
            android:textColor="@color/white"
            android:textSize="@dimen/x150"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="32sp"
            />
      </LinearLayout>

      <!--重量数字下面的图标-->
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="horizontal"
          >
        <ImageView
            android:id="@+id/img_zero"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x32"
            android:src="@drawable/zero_state_list"

            />
        <ImageView
            android:id="@+id/img_tare"
            android:layout_marginLeft="@dimen/x5"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x32"
            android:src="@drawable/tare_state_list"
            />
        <ImageView
            android:id="@+id/img_still"
            android:layout_marginLeft="@dimen/x5"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x32"
            android:src="@drawable/still_state_list"
            />
        <!--<ImageView-->
            <!--android:layout_marginLeft="@dimen/x5"-->
            <!--android:layout_width="@dimen/x60"-->
            <!--android:layout_height="@dimen/x32"-->
            <!--android:background="@drawable/ico_d_selecotor"-->
            <!--/>-->
        <!--<ImageView-->
            <!--android:layout_marginLeft="@dimen/x5"-->
            <!--android:layout_width="@dimen/x60"-->
            <!--android:layout_height="@dimen/x32"-->
            <!--android:background="@drawable/ico_e_selecotor"-->
            <!--/>-->
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/tare"
              android:textColor="@color/white"
              />
          <TextView
              android:id="@+id/txtTare"
              android:layout_marginLeft="@dimen/x2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="0.0000 kg"
              android:textColor="@color/white"
              />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""
              android:textColor="@color/gray"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""
              android:textColor="@color/yellow"
              android:textSize="@dimen/x45"
              />
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="@dimen/x50"
        android:layout_height="match_parent"
        android:gravity="center"
        >
    </LinearLayout>

  </LinearLayout>
  <!--底部-->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/x50"
        >
      <ImageView
          android:id="@+id/btn_print"
          android:layout_width="@dimen/x100"
          android:layout_height="@dimen/x100"
          android:layout_gravity="center"
          android:src="@drawable/print"
          />
      <!--<ImageView-->
          <!--android:id="@+id/btn_save"-->
          <!--android:layout_width="@dimen/x60"-->
          <!--android:layout_height="@dimen/x60"-->
          <!--android:layout_gravity="center"-->
          <!--android:layout_marginLeft="@dimen/x10"-->
          <!--android:src="@drawable/printset"-->
          <!--/>-->
    </LinearLayout>
    <!--菜单按钮-->
    <LinearLayout
        android:layout_width="@dimen/x850"
        android:layout_height="match_parent"
        android:gravity="right|center_vertical"
        android:paddingRight="@dimen/x50"
        >

      <Button
          android:id="@+id/btn_switch_ng"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/x5"
          android:background="@drawable/btn_gray_selector"
          android:elevation="1dp"
          android:singleLine="true"
          android:text="@string/switch_ng"
          android:textColor="@color/white"
          android:textSize="@dimen/x36"
          android:textStyle="bold"
          />

      <Button
          android:id="@+id/btn_tare"
          android:layout_width="@dimen/x150"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/x5"
          android:background="@drawable/btn_gray_selector"
          android:elevation="1dp"
          android:singleLine="true"
          android:text="@string/tare"
          android:textColor="@color/white"
          android:textSize="@dimen/x36"
          android:textStyle="bold"
          />
      <Button
          android:id="@+id/btn_zero"
          android:layout_width="@dimen/x150"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/x5"
          android:background="@drawable/btn_gray_selector"
          android:elevation="1dp"
          android:singleLine="true"
          android:text="@string/zero"
          android:textColor="@color/white"
          android:textSize="@dimen/x36"
          android:textStyle="bold"
          />
      <Button
          android:id="@+id/btn_switch_unit"
          android:layout_width="@dimen/x150"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/x3"
          android:background="@drawable/btn_gray_selector"
          android:elevation="1dp"
          android:gravity="center"
          android:singleLine="true"
          android:text="@string/unit"
          android:textColor="@color/white"
          android:textSize="@dimen/x36"
          android:textStyle="bold"
          />
      <Button
          android:id="@+id/btn_save"
          android:layout_width="@dimen/x150"
          android:layout_height="wrap_content"
          android:background="@drawable/btn_gray_selector"
          android:elevation="1dp"
          android:singleLine="true"
          android:text="@string/save"
          android:textColor="@color/white"
          android:textSize="@dimen/x36"
          android:layout_marginLeft="@dimen/x5"
          android:textStyle="bold"
          />

    </LinearLayout>
  </LinearLayout>



</LinearLayout>