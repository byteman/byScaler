<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zerotrack" />

        <Spinner
            android:id="@+id/sp_zerotrack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/zerotrack"
            android:prompt="@string/zerotrack" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zeroinit" />

        <Spinner
            android:id="@+id/sp_zeroinit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/zeroinit"
            android:prompt="@string/zeroinit" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mtd" />

        <Spinner
            android:id="@+id/sp_mtd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/mtd"
            android:prompt="@string/mtd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dignum" />

        <Spinner
            android:id="@+id/sp_dignum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/dignum"
            android:prompt="@string/dignum" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/div" />

        <Spinner
            android:id="@+id/sp_div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/div"
            android:prompt="@string/div" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nov" />

        <EditText
            android:id="@+id/ed_nov"
            android:inputType="number"
            android:maxLength="7"
            android:hint="不要超过1000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unit" />

        <EditText
            android:id="@+id/ed_unit"
            android:inputType="text"
            android:maxLength="3"
            android:hint="重量单位,不超过3个字符"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

     <LinearLayout
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <Button
            android:text="@string/read"
            android:layout_weight="1"
            android:id="@+id/btn_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>
        <Button
            android:text="@string/write"
            android:id="@+id/btn_save"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>
         <Button
            android:text="@string/save"
            android:id="@+id/btn_eeprom"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>
      
      </LinearLayout>
</LinearLayout>