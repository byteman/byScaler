<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weight_bg"
    android:orientation="vertical" >

     <LinearLayout
        android:id="@+id/ll55"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView51"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="时间" />

        <EditText
            android:id="@+id/edit_time"
            android:editable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
		 />
        
        
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="数据写入地址" />

        <EditText
            android:id="@+id/edit_write_index"
            android:maxLength="5"
            android:hint="不要超过65535"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
   
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/ll6"
        android:layout_below="@id/ll5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="数据读取地址" />

        <EditText
            android:id="@+id/edit_read_index"
            android:inputType="number"
            android:maxLength="5"
            android:hint="不要超过65535"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
     <LinearLayout
        android:id="@+id/ll7"
        android:layout_below="@id/ll6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="雨量单位" />

        <EditText
            android:id="@+id/edit_rain"
            android:inputType="number"
            android:maxLength="5"
            android:hint=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
   
   

   <LinearLayout
         android:id="@+id/ll333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
         
        android:orientation="horizontal" >
    </LinearLayout>
    <LinearLayout
         android:id="@+id/ll3335"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
         
        android:orientation="horizontal" >
    </LinearLayout>
     <LinearLayout
        android:id="@+id/ll71"
   
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <Button
            style="@style/bybutton"
            android:text="读取"
            android:layout_weight="1"
            android:id="@+id/btn_read"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content">
        </Button>
        <Button
            style="@style/bybutton"
            android:text="保存"
            android:id="@+id/btn_save"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>
         <Button
            style="@style/bybutton"
            android:text="同步时间"
            android:id="@+id/btn_sync_time"
             android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>
        <Button
            style="@style/bybutton"
            android:text="返回"
            android:id="@+id/btn_back"
             android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>
       
      
      </LinearLayout>
</LinearLayout>