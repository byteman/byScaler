<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weight_bg"
    android:orientation="vertical"
    android:weightSum="4"
     >

    <RelativeLayout
       
        android:layout_width="match_parent"
        android:layout_height="113.5dp" >

        <TextView
            android:id="@+id/button1"
            android:layout_width="130dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/oval_shape3"
            android:text="称名:00546" />

        <com.example.bluetooth.view.AutoBgButton
            android:id="@+id/button2"
            android:layout_width="33.5dp"
            android:layout_height="33.5sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:background="@drawable/bt2_oval_shape"
            android:text="打印"
            android:textSize="14sp" />

        <com.example.bluetooth.view.AutoBgButton
             android:id="@+id/button3"
            android:layout_width="66dp"
            android:layout_height="31sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:background="@drawable/bt_oval_shape"
            android:text="N/G"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <com.example.bluetooth.view.AutoBgButton
            android:id="@+id/button4"
            android:layout_width="66dp"
            android:layout_height="31sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/bt_oval_shape"
            android:text="N/G"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.example.bluetooth.view.AutoBgButton
            android:id="@+id/button5"
            android:layout_width="66dp"
            android:layout_height="31sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="120dp"
            android:background="@drawable/bt_oval_shape"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />
        <com.example.bluetooth.view.AutoBgButton
            android:id="@+id/button6"
            android:layout_width="28dp"
            android:layout_height="14sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
              android:layout_marginRight="70dp"
            android:background="@drawable/bt_oval_shape"
            
            android:textSize="14sp" />

    </RelativeLayout>

 <LinearLayout
         android:background="@drawable/gray_oval_shape"
           android:layout_weight="2"
        android:layout_width="360.5dp"
        android:layout_height="152dp"
        android:layout_gravity="center_horizontal"
       android:layout_centerInParent="true" >

       <TextView
           android:id="@+id/textView1"
           android:layout_width="320dp"
           android:layout_height="120dp"
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="5dp"
           android:background="@drawable/white_oval_shape"
           android:gravity="center"
           android:text="1000.00"
           android:textSize="45sp"
           android:textStyle="bold" />

       <TextView
           android:id="@+id/textView2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           android:layout_marginTop="10dp"
           android:text="kg"
           android:textSize="25sp" />

    </LinearLayout>
    
 <RelativeLayout
     android:layout_alignParentBottom="true"
      
        android:layout_width="match_parent"
        android:layout_height="80dp" >

     <TextView
         android:id="@+id/textView3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:text="累计:12345"
          android:layout_marginLeft="50dp"
         android:textColor="@color/white"
         android:textSize="18sp" />
     <TextView
         android:id="@+id/textView4"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_centerVertical="true"
         android:text="皮重:254"
          android:layout_marginLeft="90dp"
         android:textColor="@color/white"
         android:textSize="18sp" />
     <com.example.bluetooth.view.AutoBgButton
            android:id="@+id/button7"
            android:layout_width="66dp"
            android:layout_height="31sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="70dp"
            android:background="@drawable/bt_oval_shape"
            android:text="累计"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

     <EditText
         android:id="@+id/editText1"
         android:layout_width="104dp"
         android:layout_height="32dp"
       android:layout_centerInParent="true"
       android:background="@drawable/black_rect_shape"
       android:hint="物料/品名"
       android:padding="3dp" >

         <requestFocus />
     </EditText>

    </RelativeLayout>
   

</RelativeLayout>