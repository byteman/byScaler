<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weight_bg"
    android:orientation="vertical"
    android:weightSum="5"
     >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/button1"
            android:layout_width="65dp"
            android:layout_height="17dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/oval_shape3"
            android:gravity="center"
            android:text="称名:00546"
            android:textSize="14sp" />

        <com.blescaler.ui.ble.AutoBgButton
            android:id="@+id/button6"
            android:layout_width="28dp"
            android:layout_height="14sp"
           android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
             
            android:background="@drawable/bt_oval_shape"
            
            android:textSize="14sp" />

    </RelativeLayout>
 <LinearLayout
      android:gravity="center"
            android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_width="fill_parent"
       
        >

 <LinearLayout
     android:layout_width="172dp"
     android:layout_height="72dp"
    
     android:layout_gravity="center"
     android:background="@drawable/gray_oval_shape" >

     <TextView
         android:id="@+id/textView1"
         android:layout_width="140dp"
         android:layout_height="52dp"
         android:layout_gravity="center_vertical"
         android:layout_marginLeft="5dp"
         android:background="@drawable/white_oval_shape"
         android:gravity="center"
         android:text="1000.00"
         android:textSize="18sp"
         android:textStyle="bold" />

     <TextView
         android:id="@+id/textView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_vertical"
         android:layout_marginTop="10dp"
         android:text="kg"
         android:textSize="14sp" />
 </LinearLayout>

     </LinearLayout>
 <RelativeLayout
     android:layout_alignParentBottom="true"
      
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

     <TextView
         android:id="@+id/textView3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_centerVertical="true"
         android:text="累计:12345"
         
         android:textColor="@color/white"
         android:textSize="14sp" />
     <TextView
         android:id="@+id/textView4"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
       android:layout_centerInParent="true"
         android:text="皮重:254"
          android:layout_marginLeft="90dp"
         android:textColor="@color/white"
         android:textSize="14sp" />
 <TextView
         android:id="@+id/textView5"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:text="流水号:0002"
          android:layout_marginLeft="50dp"
         android:textColor="@color/white"
         android:textSize="14sp" />
    </RelativeLayout>
   

</LinearLayout>